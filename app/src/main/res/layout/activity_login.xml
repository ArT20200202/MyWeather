<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <ImageView
        android:id="@+id/imageView_logo"
        android:scaleType="centerInside"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_img"/>
    //scaleType缩放类型，centerInside等比例缩放
    <EditText
        android:id="@+id/edittext_username"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:padding="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="用户名/手机号/邮箱"
        />
    //padding文字距边框距离
    //用自定义的shape "rounded_deittext" 来填充EditText，实现圆角效果
    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:padding="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext"
        android:hint="输入密码"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_login_staic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/circle_button_static"
            android:text="GO"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/circle_button_dynamic"
            android:text="GO"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

</LinearLayout>